{
  "devDependencies": {
    "@types/jest": "^23.1.6",
    "jest": "^23.4.1",
    "ts-jest": "^23.0.0",
    "typescript": "^2.9.2"
  },
  "ava": {
    "require": "babel-register"
  },
  "scripts": {
    "test": "jest"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/test/.*spec.ts)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "@/(.*)$": "<rootDir>/$1",
      "^dir-1/(.*)$": "<rootDir>/dir-a/dir-b-1/$1",
      "^dir-2/(.*)$": "<rootDir>/dir-a/dir-b-2/$1",
      "^lib/(.*)$": "<rootDir>/dir-a/lib/$1"
    }
  }
}
